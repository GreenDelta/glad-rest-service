<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" version="2.5">
  <display-name>LCA Search REST Service</display-name>
  <listener>
    <listener-class>com.greendelta.lca.search.rest.SearchInitializer</listener-class>
  </listener>
  <filter>
    <filter-name>AppKeyFilter</filter-name>
    <filter-class>com.greendelta.lca.search.rest.AppKeyFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>AppKeyFilter</filter-name>
    <url-pattern>/search/index/*</url-pattern>
  </filter-mapping>
  <servlet>
    <servlet-name>LCA Search REST Service</servlet-name>
    <servlet-class>com.sun.jersey.spi.container.servlet.ServletContainer</servlet-class>
    <init-param>
      <param-name>com.sun.jersey.config.property.packages</param-name>
      <param-value>com.greendelta.lca.search.rest</param-value>
    </init-param>
    <init-param>
      <param-name>com.sun.jersey.api.json.POJOMappingFeature</param-name>
      <param-value>true</param-value>
    </init-param>
    <load-on-startup>1</load-on-startup>
  </servlet>
  <servlet-mapping>
    <servlet-name>LCA Search REST Service</servlet-name>
    <url-pattern>/*</url-pattern>
  </servlet-mapping>
</web-app>